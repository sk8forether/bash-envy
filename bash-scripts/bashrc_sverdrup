#!/bin/bash 

## Modules
module load c7
module load intel/17.0
module load openmpi/2.0.1

## Directories
export HOME=/home/tsmith
export SCRATCH=/scratch/tsmith
export contrib=/home/tsmith/gcm-contrib
export computing=/home/tsmith/computing
export MPI_INC_DIR=$MPI_DIR/include
export ph_data=/scratch/heimbach/data
export ase=/scratch/tsmith/MITgcm_c66i+/ase

## Commands
export PS1='[\h \W]\$ '
alias scpthorne='scp -P 8704'
alias qu='squeue -u tsmith'

## Netcdf workaround
#NETCDF C
export NETCDFC_ROOT=/share/netcdf-4.4.1.1/
export NETCDFC_INC=$NETCDFC_ROOT/include
export NETCDFC_BIN=$NETCDFC_ROOT/bin
export NETCDFC_LIB=$NETCDFC_ROOT/lib
#NETCDF Fortran
export NETCDFF_ROOT=/share/netcdf-fortran-4.4.4
export NETCDFF_INC=$NETCDFF_ROOT/include
export NETCDFF_BIN=$NETCDFF_ROOT/bin
export NETCDFF_LIB=$NETCDFF_ROOT/lib

export LD_LIBRARY_PATH=$NETCDFC_LIB:$NETCDFF_LIB:$LD_LIBRARY_PATH
export PATH=$NETCDFC_BIN:$NETCDFF_BIN:$PATH
export INCLUDE=$NETCDFC_INC:$NETCDFF_INC:$INCLUDE
